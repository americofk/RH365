@* ============================================================================
   Archivo: LP_Projects.cshtml
   Proyecto: RH365.WebMVC
   Ruta: RH365/Views/Project/LP_Projects.cshtml
   Descripción: ListPage de Proyectos con gestión de vistas de usuario
   ============================================================================ *@
@{
    ViewData["Title"] = "Proyectos";
    string dataareaId = ViewBag.DataareaID ?? "DAT";
    long userRefRecID = ViewBag.UserRefRecID ?? 0L;
    string bearer = Context.Session.GetString("Token") ?? "";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RH365 - Proyectos</title>

    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="~/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
    <!-- Datatables -->
    <link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="~/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="~/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
    <!-- jQuery UI CSS para drag & drop -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">

    <style>
        /* Estilos para gestión de columnas */
        .column-item {
            padding: 10px;
            border: 1px solid #e3e6ea;
            background: white;
            margin-bottom: 5px;
            border-radius: 3px;
            display: flex;
            align-items: center;
            cursor: move;
        }

            .column-item:hover {
                background-color: #f8f9fa;
            }

            .column-item .drag-handle {
                margin-right: 10px;
                color: #999;
                cursor: grab;
            }

                .column-item .drag-handle:active {
                    cursor: grabbing;
                }

            .column-item .column-checkbox {
                margin-right: 10px;
            }

            .column-item .column-name {
                flex: 1;
                font-weight: 500;
                color: #2A3F54;
            }

        .ui-sortable-helper {
            opacity: 0.6;
        }
    </style>
</head>

<body class="nav-md footer_fixed">
    <div class="container body">
        <div class="main_container">
            <!-- Menú Lateral -->
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    @await Html.PartialAsync("~/Views/Layout/TopMenuLogo.cshtml")
                    <div class="clearfix"></div>
                    @await Html.PartialAsync("~/Views/Layout/ProfileMenu.cshtml")
                    <br />
                    @await Html.PartialAsync("~/Views/Layout/MainMenu.cshtml")
                    @await Html.PartialAsync("~/Views/Layout/FooterMenu.cshtml")
                </div>
            </div>

            <!-- Top Navigation -->
            @await Html.PartialAsync("~/Views/Layout/TopMenu.cshtml")

            <!-- page content -->
            <div class="right_col" role="main"
                 id="projects-page"
                 data-dataarea="@dataareaId"
                 data-user="@userRefRecID"
                 data-token="@Html.Raw(bearer)">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <button type="button" id="btn-new" class="btn btn-primary">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo
                            </button>
                            <button type="button" id="btn-edit" class="btn btn-warning" disabled>
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                            </button>
                            <button type="button" id="btn-delete" class="btn btn-danger" disabled>
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar
                            </button>
                        </div>
                        <div class="title_right">
                            <button type="button" id="btn-export" class="btn btn-success">
                                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span> Exportar
                            </button>
                            <button type="button" id="btn-import" class="btn btn-success">
                                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span> Importar
                            </button>
                        </div>
                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <!-- Barra de Vistas -->
                    <div class="row" style="margin-bottom: 15px;">
                        <div class="col-md-12">
                            <div style="background: #f5f5f5; padding: 10px 15px; border: 1px solid #ddd; border-radius: 3px;">
                                <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
                                    <!-- Selector de Vista -->
                                    <div style="display: flex; align-items: center; gap: 10px;">
                                        <strong><i class="fa fa-eye"></i> Vista:</strong>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                                                <span id="current-view-name">Vista por defecto</span> <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu" id="views-dropdown" role="menu">
                                                <li class="dropdown-header">Mis Vistas</li>
                                                <li><a href="#" data-view="default"><i class="fa fa-table"></i> Vista por defecto</a></li>
                                                <li class="divider"></li>
                                                <li id="saved-views-container">
                                                    <!-- Vistas guardadas se cargan aquí -->
                                                </li>
                                                <li class="divider"></li>
                                                <li><a href="#" id="btn-new-view"><i class="fa fa-plus-circle"></i> Nueva Vista</a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <!-- Acciones de Vista -->
                                    <div style="display: flex; gap: 5px;">
                                        <button type="button" class="btn btn-default btn-sm" id="btn-save-view-changes" title="Guardar cambios" style="display: none;">
                                            <i class="fa fa-save"></i> Guardar
                                        </button>
                                        <button type="button" class="btn btn-default btn-sm" id="btn-save-as-view" title="Guardar como nueva vista">
                                            <i class="fa fa-copy"></i> Guardar Como
                                        </button>
                                        <button type="button" class="btn btn-default btn-sm" id="btn-manage-columns" title="Gestionar columnas">
                                            <i class="fa fa-columns"></i> Columnas
                                        </button>
                                        <button type="button" class="btn btn-default btn-sm" id="btn-reset-view" title="Restablecer vista">
                                            <i class="fa fa-refresh"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Todos los proyectos</h2>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <div class="table-responsive" style="max-height: 800px; overflow-y: auto;">
                                        <table id="projects-table" class="table table-striped table-bordered bulk_action">
                                            <thead>
                                                <!-- Las columnas se generan dinámicamente -->
                                            </thead>
                                            <tbody>
                                                <!-- Los datos se cargan dinámicamente -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Table -->
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    RH365 - Sistema de Recursos Humanos © @DateTime.Now.Year
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- Modal: Gestionar Columnas -->
    <div class="modal fade" id="modal-manage-columns" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-columns"></i> Gestionar Columnas</h4>
                </div>
                <div class="modal-body">
                    <p class="text-muted">
                        <i class="fa fa-info-circle"></i> Selecciona las columnas visibles y arrastra para reordenar
                    </p>
                    <div id="columns-list" style="max-height: 400px; overflow-y: auto;">
                        <!-- Las columnas se cargan dinámicamente -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btn-apply-columns">
                        <i class="fa fa-check"></i> Aplicar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal: Guardar Vista -->
    <div class="modal fade" id="modal-save-view" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-save"></i> Guardar Vista</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="view-name">Nombre de la vista</label>
                        <input type="text" class="form-control" id="view-name" placeholder="Ej: Vista Rápida" required>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="view-is-default"> Establecer como predeterminada
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="view-is-public"> Compartir con toda la empresa
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btn-confirm-save-view">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal: Guardar Como -->
    <div class="modal fade" id="modal-save-as-view" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-copy"></i> Guardar Como Nueva Vista</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="view-name-saveas">Nombre de la nueva vista</label>
                        <input type="text" class="form-control" id="view-name-saveas" placeholder="Ej: Mi Vista Personalizada" required>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="view-is-default-saveas"> Establecer como predeterminada
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="view-is-public-saveas"> Compartir con la empresa
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btn-confirm-save-as">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <!-- jQuery UI para drag & drop -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="~/vendors/nprogress/nprogress.js"></script>
    <!-- iCheck -->
    <script src="~/vendors/iCheck/icheck.min.js"></script>
    <!-- Datatables -->
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
    <script src="~/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="~/vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
    <script src="~/vendors/jszip/dist/jszip.min.js"></script>
    <script src="~/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/vendors/pdfmake/build/vfs_fonts.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/build/js/custom.min.js"></script>

    <!-- Grid Views Scripts -->
    <script src="~/js/GridViews/grid-views-manager.js"></script>
    <script src="~/js/GridViews/grid-columns-manager.js"></script>

    <!-- Script de proyectos -->
    <script src="~/js/Projects/projects-dt.js"></script>
</body>
</html>



