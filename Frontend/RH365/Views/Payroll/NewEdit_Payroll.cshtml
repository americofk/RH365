@* ============================================================================
   Archivo: NewEdit_Payroll.cshtml
   Proyecto: RH365.WebMVC
   Ruta: RH365/Views/Payroll/NewEdit_Payroll.cshtml
   Descripción: 
       - Formulario para Crear/Editar Nóminas con estilo Gentelella
       - Layout de 2 COLUMNAS en Tab General
       - Tab Auditoría: Campos de trazabilidad ISO 27001
       - Renderizado dinámico de campos desde TypeScript
       - URLs del API centralizadas desde backend
   ISO 27001: Formulario con validación y trazabilidad de cambios
   ============================================================================ *@
@{
    ViewData["Title"] = "Nómina";
    string dataareaId = ViewBag.DataareaID ?? "DAT";
    long userRefRecID = ViewBag.UserRefRecID ?? 0L;
    long recId = ViewBag.RecID ?? 0L;
    bool isNew = ViewBag.IsNew ?? true;
    string bearer = Context.Session.GetString("Token") ?? "";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RH365 - @(isNew ? "Nueva Nómina" : "Editar Nómina")</title>

    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="~/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
    <!-- PNotify CSS -->
    <link href="~/vendors/pnotify/dist/pnotify.css" rel="stylesheet">
    <link href="~/vendors/pnotify/dist/pnotify.buttons.css" rel="stylesheet">
    <link href="~/vendors/pnotify/dist/pnotify.nonblock.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
    
    <!-- Estilos personalizados para campos readonly -->
    <style>
        input[readonly], 
        textarea[readonly], 
        select[disabled] {
            background-color: #f5f5f5 !important;
            cursor: not-allowed !important;
            color: #999 !important;
        }
    </style>
</head>

<body class="nav-md footer_fixed">
    <div class="container body">
        <div class="main_container">
            <!-- Menú Lateral -->
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    @await Html.PartialAsync("~/Views/Layout/TopMenuLogo.cshtml")
                    <div class="clearfix"></div>
                    @await Html.PartialAsync("~/Views/Layout/ProfileMenu.cshtml")
                    <br />
                    @await Html.PartialAsync("~/Views/Layout/MainMenu.cshtml")
                    @await Html.PartialAsync("~/Views/Layout/FooterMenu.cshtml")
                </div>
            </div>

            <!-- Top Navigation -->
            @await Html.PartialAsync("~/Views/Layout/TopMenu.cshtml")

            <!-- page content -->
            <div class="right_col" role="main"
                 id="payroll-form-page"
                 data-dataarea="@dataareaId"
                 data-user="@userRefRecID"
                 data-recid="@recId"
                 data-isnew="@isNew.ToString().ToLower()"
                 data-token="@Html.Raw(bearer)">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>@(isNew ? "Nueva Nómina" : "Editar Nómina")</h3>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <!-- Panel con Tabs -->
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                        <!-- Navegación de Tabs -->
                                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                            <li role="presentation" class="active">
                                                <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">
                                                    <i class="fa fa-folder-open"></i> General
                                                </a>
                                            </li>
                                            <li role="presentation" class="">
                                                <a href="#tab_content2" role="tab" id="paycycles-tab" data-toggle="tab" aria-expanded="false">
                                                    <i class="fa fa-calendar"></i> Ciclos de Pago
                                                </a>
                                            </li>
                                            <li role="presentation" class="">
                                                <a href="#tab_content3" role="tab" id="audit-tab" data-toggle="tab" aria-expanded="false">
                                                    <i class="fa fa-history"></i> Auditoría
                                                </a>
                                            </li>
                                        </ul>

                                        <div id="myTabContent" class="tab-content">
                                            <!-- ========================================== -->
                                            <!-- TAB 1: GENERAL (Campos de Negocio - 2 COLUMNAS)  -->
                                            <!-- ========================================== -->
                                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div class="x_panel">
                                                            <div class="x_title">
                                                                <h2>Información de la Nómina</h2>
                                                                <ul class="nav navbar-right panel_toolbox">
                                                                    <li>
                                                                        <a href="/Payroll/LP_Payrolls" class="btn btn-default btn-sm">
                                                                            <i class="fa fa-arrow-left"></i> Volver
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                            <div class="x_content">
                                                                <br />
                                                                <form id="frm-payroll" class="form-horizontal form-label-left">
                                                                    @Html.AntiForgeryToken()

                                                                    <!-- Hidden fields -->
                                                                    <input type="hidden" id="RecID" name="RecID" value="@recId" />
                                                                    <input type="hidden" id="DataareaID" name="DataareaID" value="@dataareaId" />

                                                                    <!-- Contenedor para campos en 2 COLUMNAS -->
                                                                    <div class="row">
                                                                        <!-- COLUMNA IZQUIERDA -->
                                                                        <div class="col-md-6" id="dynamic-fields-col-left">
                                                                            <div class="text-center" style="padding: 40px;">
                                                                                <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                                                                                <p class="text-muted">Cargando...</p>
                                                                            </div>
                                                                        </div>

                                                                        <!-- COLUMNA DERECHA -->
                                                                        <div class="col-md-6" id="dynamic-fields-col-right">
                                                                            <div class="text-center" style="padding: 40px;">
                                                                                <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                                                                                <p class="text-muted">Cargando...</p>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <div class="ln_solid"></div>

                                                                    <!-- Botones de Acción -->
                                                                    <div class="form-group">
                                                                        <div class="col-md-12 text-center">
                                                                            <button type="button" class="btn btn-default" onclick="window.location.href='/Payroll/LP_Payrolls'">
                                                                                <i class="fa fa-times"></i> Cancelar
                                                                            </button>
                                                                            <button type="button" id="btn-save" class="btn btn-primary">
                                                                                <i class="fa fa-save"></i> Guardar
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /TAB 1: GENERAL -->
                                            <!-- ========================================== -->
                                            <!-- TAB 2: CICLOS DE PAGO                      -->
                                            <!-- ========================================== -->
                                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="paycycles-tab">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div class="x_panel">
                                                            <div class="x_title">
                                                                <h2>
                                                                    <i class="fa fa-calendar"></i> Ciclos de Pago
                                                                </h2>
                                                                <ul class="nav navbar-right panel_toolbox">
                                                                    <li>
                                                                        <button type="button" id="btn-new-cycle" class="btn btn-success btn-sm">
                                                                            <i class="fa fa-plus"></i> Nuevo Ciclo
                                                                        </button>
                                                                    </li>
                                                                    <li>
                                                                        <button type="button" id="btn-delete-cycles" class="btn btn-danger btn-sm" disabled>
                                                                            <i class="fa fa-trash"></i> Eliminar
                                                                        </button>
                                                                    </li>
                                                                </ul>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                            <div class="x_content">
                                                                <br />
                                                                <!-- Contenedor dinámico para ciclos de pago -->
                                                                <div id="paycycles-container">
                                                                    <div class="text-center" style="padding: 40px;">
                                                                        <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                                                                        <p class="text-muted">Cargando ciclos de pago...</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /TAB 2: CICLOS DE PAGO -->
                                            <!-- ========================================== -->
                                            <!-- TAB 3: AUDITORÍA (Campos ISO 27001)       -->
                                            <!-- ========================================== -->
                                            <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="audit-tab">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div class="x_panel">
                                                            <div class="x_title">
                                                                <h2>
                                                                    <i class="fa fa-shield"></i> Información de Auditoría (ISO 27001)
                                                                </h2>
                                                                <ul class="nav navbar-right panel_toolbox">
                                                                    <li>
                                                                        <span class="label label-info">
                                                                            <i class="fa fa-lock"></i> Solo Lectura
                                                                        </span>
                                                                    </li>
                                                                </ul>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                            <div class="x_content">
                                                                <br />
                                                                <form class="form-horizontal form-label-left">
                                                                    <!-- Contenedor para campos de auditoría (dinámicos) -->
                                                                    <div id="audit-fields-container">
                                                                        <div class="text-center" style="padding: 40px;">
                                                                            <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                                                                            <p class="text-muted">Cargando datos de auditoría...</p>
                                                                        </div>
                                                                    </div>

                                                                    <div class="ln_solid"></div>

                                                                    <!-- Info adicional sobre auditoría -->
                                                                    <div class="alert alert-info" role="alert">
                                                                        <strong><i class="fa fa-info-circle"></i> Nota:</strong>
                                                                        Los campos de auditoría son generados automáticamente por el sistema
                                                                        y no pueden ser modificados manualmente. Estos datos garantizan la
                                                                        trazabilidad completa según el estándar ISO 27001.
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /TAB 2: AUDITORÍA -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Panel con Tabs -->
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    RH365 - Sistema de Recursos Humanos © @DateTime.Now.Year
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- Modal: Crear/Editar Ciclo de Pago -->
    <div class="modal fade" id="modal-paycycle" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    <h4 class="modal-title" id="modal-paycycle-title"><i class="fa fa-calendar"></i> Nuevo Ciclo de Pago</h4>
                </div>
                <div class="modal-body">
                    <form id="frm-paycycle" class="form-horizontal form-label-left">
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="PeriodStartDate">
                                Inicio Período <span class="required">*</span>
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="date" id="PeriodStartDate" name="PeriodStartDate" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="PeriodEndDate">
                                Fin Período <span class="required">*</span>
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="date" id="PeriodEndDate" name="PeriodEndDate" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="DefaultPayDate">
                                Fecha de Pago por Defecto <span class="required">*</span>
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="date" id="DefaultPayDate" name="DefaultPayDate" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="PayDate">
                                Fecha de Pago <span class="required">*</span>
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="date" id="PayDate" name="PayDate" class="form-control" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="AmountPaidPerPeriod">
                                Monto a Pagar
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="number" id="AmountPaidPerPeriod" name="AmountPaidPerPeriod" class="form-control" step="0.01" value="0">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="StatusPeriod">
                                Estado del Período <span class="required">*</span>
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <select id="StatusPeriod" name="StatusPeriod" class="form-control" required>
                                    <option value="0">Abierto</option>
                                    <option value="1">Procesado</option>
                                    <option value="2">Pagado</option>
                                    <option value="3">Registrado</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12">
                                Opciones
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="IsForTax" name="IsForTax" class="flat"> Para Impuestos
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="IsForTss" name="IsForTss" class="flat"> Para TSS
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ObservationsCycle">
                                Observaciones
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <textarea id="ObservationsCycle" name="ObservationsCycle" class="form-control" rows="3" maxlength="500"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <i class="fa fa-times"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" id="btn-save-cycle">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="~/vendors/nprogress/nprogress.js"></script>
    <!-- iCheck -->
    <script src="~/vendors/iCheck/icheck.min.js"></script>
    <!-- PNotify JS -->
    <script src="~/vendors/pnotify/dist/pnotify.js"></script>
    <script src="~/vendors/pnotify/dist/pnotify.buttons.js"></script>
    <script src="~/vendors/pnotify/dist/pnotify.nonblock.js"></script>

    <!-- Deshabilitar notificaciones de demo de PNotify -->
    <script>
        (function() {
            if (typeof PNotify !== 'undefined') {
                PNotify.prototype.options.desktop = { desktop: false };
                PNotify.removeAll();
                var observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        mutation.addedNodes.forEach(function(node) {
                            if (node.nodeType === 1 && node.classList &&
                                (node.classList.contains('ui-pnotify') || node.classList.contains('pnotify'))) {
                                var text = node.textContent || '';
                                if (text.includes('Welcome') || text.includes('hovering') || text.includes('non-blocking')) {
                                    node.remove();
                                }
                            }
                        });
                    });
                });
                observer.observe(document.body, { childList: true, subtree: true });
                setTimeout(function() {
                    observer.disconnect();
                    PNotify.removeAll();
                }, 3000);
            }
        })();
    </script>

    <!-- Custom Theme Scripts -->
    <script src="~/build/js/custom.min.js"></script>

    <!-- ============================================================ -->
    <!-- CRÍTICO: API URLs - DEBE IR ANTES DE CUALQUIER SCRIPT PERSONALIZADO -->
    <!-- ============================================================ -->
    @await Html.PartialAsync("~/Views/Layout/_ApiUrls.cshtml")

    <!-- Sistema de Alertas -->
    @await Html.PartialAsync("~/Views/Generic/_Alerts.cshtml")

    <!-- Script del formulario de nóminas -->
    <script src="~/js/Payrolls/payroll-form.js"></script>

    <!-- Script de ciclos de pago -->
    <script src="~/js/Payrolls/paycycles-tab.js"></script>
</body>
</html>
